                <CheckBox
                    android:id="@+id/checkbox58"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dermatitis" />

                <CheckBox
                    android:id="@+id/checkbox59"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Estrés emocional" />

