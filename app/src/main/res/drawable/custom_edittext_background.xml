<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Color de fondo del EditText -->
    <solid android:color="#FFFFFF"/> <!-- Fondo blanco -->

    <!-- Definir el borde -->
    <stroke
        android:width="2dp"
        android:color="#4d648d"/> <!-- Color verde del borde -->

    <!-- Bordes redondeados -->
    <corners android:radius="8dp"/> <!-- Esquinas redondeadas -->

    <!-- Espaciado interno -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp"/>
</shape>
